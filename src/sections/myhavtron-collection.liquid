<div class="mc">
   <div class="page-center">
      <div class="mc__top">
         <h3>{{section.settings.collection_title}}</h3>
      </div>
      <div class="mc__slider mc__slider--js">
         {% for product in collections[section.settings.idcollection].products %}
         <div class="mc__col">
            <div class="mc__cell">
               <div class="mc__art">
                  <img src="{{ product | img_url:'original' }}" alt=".">
               </div>
               <p><a href="{{ product.url }}">{{ product.title }}</a></p>
            </div>
         </div>
         {% endfor %}
      </div>
      <div class="mc__button">
         <ul class="d-flex-wrap justify-content-center align-item-center">
            <li><a href="{{section.settings.collection_button_one_link}}" class="btn-yellow">{{section.settings.collection_button_one}}</a></li>
            <li><a href="{{section.settings.collection_button_two_link}}" class="btn-green-underline">{{section.settings.collection_button_two}}</a></li>
         </ul>
      </div>
   </div>
</div>

{% schema %}
  {
    "name": "Myhavtron Collection",
    "settings": [
    {
         "type":      "text",
         "id":        "collection_title",
         "label":     "Collection Title"
         
      },
     {
         "type":      "collection",
         "id":        "idcollection",
         "label":     "Select Collection"
         
      },{
         "type":      "text",
         "id":        "collection_button_one",
         "label":     "Collection Button Title"
         
      },{
         "type":      "text",
         "id":        "collection_button_one_link",
         "label":     "Collection Button Link"
         
      },{
         "type":      "text",
         "id":        "collection_button_two",
         "label":     "All Collection Button Title"
         
      },{
         "type":      "text",
         "id":        "collection_button_two_link",
         "label":     "All Collection Button Link"
         
      }
    ],
    "presets": [
      {
        "name": "Myhavtron Collection",
        "category": "banner"
      }
    ]
  }
{% endschema %}
{% javascript %}
  $('.mc__slider--js').slick({
    speed: 500,
    slidesToShow: 4,
    slidesToScroll: 1,
    dots: false,
    infinite: false,
    responsive: [
      {
        breakpoint: 1024,
        settings: {
          slidesToShow: 3,
          slidesToScroll: 1
        }
      },
      {
        breakpoint: 580,
        settings: {
          slidesToShow: 1,
          slidesToScroll: 1
        }
      }
    ]
  });
{% endjavascript %}